# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias c="cd ~/Dropbox/code"
alias dotfiles="cd ~/.dotfiles"

# git
alias g="git"
alias gc="git commit"
alias gcm="git commit -m"
alias gs="git status"
alias gd="git diff"

# Bundler
alias b="bundle exec"
alias bundleit="bundle --binstubs=bin/stubs"

# Tests and Specs
alias s="b rspec"

# Rails
alias migrate="rake db:migrate && rake db:rollback && rake db:migrate && rake db:test:prepare"
alias m="migrate"
alias rk="rake"
